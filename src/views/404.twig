{#
/**
 * Template Name: 404 Not Found
 * Description: Template for 404 error pages
 * Context: site (Timber\Site object)
 */
#}

{% extends 'partials/base.twig' %}

{% block content %}
<div class="error-404">
 <!-- Full-screen 404 Hero -->
      <section class="relative w-full min-h-screen">
        <img
          src="https://images.unsplash.com/photo-1494526585095-c41746248156?q=80&w=2400&auto=format&fit=crop"
          alt="Softly lit architectural facade"
          class="absolute inset-0 w-full h-full object-cover"
        />
        <div class="absolute inset-0 bg-neutral-900/40"></div>
        <div class="absolute inset-0 bg-gradient-to-b from-black/50 via-black/20 to-black/60"></div>

        <div class="relative z-10 max-w-7xl mx-auto px-6 sm:px-8 pt-36 pb-24 flex min-h-screen items-center">
          <div class="w-full">
            <div class="inline-flex items-center gap-2 rounded-full bg-white/10 backdrop-blur px-3 h-8 border border-white/20">
              <i data-lucide="triangle-alert" class="w-4 h-4 text-white/90"></i>
              <span class="text-xs font-medium text-white/90">Error 404</span>
            </div>

            <div class="mt-6">
              <div
                class="text-[140px] sm:text-[180px] lg:text-[220px] font-semibold tracking-tight leading-none text-white/10"
                style="font-family: 'Playfair Display', ui-serif, Georgia, Cambria, 'Times New Roman', Times, serif;"
                aria-hidden="true"
              >
                404
              </div>
              <h1
                class="mt-2 text-4xl sm:text-6xl lg:text-7xl font-semibold tracking-tight text-white max-w-4xl"
                style="font-family: 'Playfair Display', ui-serif, Georgia, Cambria, 'Times New Roman', Times, serif;"
              >
                We can’t find the page you’re looking for.
              </h1>
              <p class="mt-5 text-base sm:text-lg text-white/80 max-w-2xl">
                This page may have been moved, renamed, or no longer exists. Try searching or explore popular pages below.
              </p>

              <!-- Search -->
              <form class="mt-8 max-w-xl" action="#" role="search" aria-label="Site search">
                <div class="relative">
                  <i class="absolute left-4 top-1/2 -translate-y-1/2 text-neutral-500" data-lucide="search" class="w-5 h-5"></i>
                  <input
                    type="search"
                    name="q"
                    placeholder="Search projects, articles, or topics"
                    class="w-full h-12 pl-12 pr-12 rounded-full bg-white/95 text-neutral-900 placeholder-neutral-500 border border-white/30 shadow-sm focus:outline-none focus:ring-2 focus:ring-white/30 focus:border-white"
                  />
                  <button
                    type="submit"
                    class="absolute right-1.5 top-1/2 -translate-y-1/2 inline-flex items-center h-9 px-3 rounded-full bg-neutral-900 text-white text-sm hover:bg-neutral-800 transition"
                    aria-label="Search"
                  >
                    <span class="hidden sm:inline">Search</span>
                    <i data-lucide="arrow-right" class="w-4 h-4 sm:ml-2"></i>
                  </button>
                </div>
              </form>

              <!-- Quick actions -->
              <div class="mt-8 flex flex-wrap items-center gap-3">
                <a
                  href="#"
                  class="inline-flex items-center gap-2 h-11 px-5 rounded-full bg-white text-neutral-900 text-sm hover:bg-neutral-100 transition shadow-sm border border-white/20"
                >
                  Return Home
                  <i data-lucide="arrow-up-right" class="w-4 h-4"></i>
                </a>
                <a
                  href="#"
                  class="inline-flex items-center gap-2 h-11 px-5 rounded-full bg-white/10 text-white text-sm hover:bg-white/15 transition border border-white/20 backdrop-blur"
                >
                  Browse Projects
                  <i data-lucide="compass" class="w-4 h-4"></i>
                </a>
                <a
                  href="#"
                  class="inline-flex items-center gap-2 h-11 px-5 rounded-full bg-white/10 text-white text-sm hover:bg-white/15 transition border border-white/20 backdrop-blur"
                >
                  Contact Us
                  <i data-lucide="mail" class="w-4 h-4"></i>
                </a>
              </div>

              <!-- Divider -->
              <div class="mt-12 max-w-4xl">
                <div class="border-t border-white/20"></div>
              </div>

              <!-- Popular destinations -->
              <div class="mt-10 grid sm:grid-cols-2 lg:grid-cols-3 gap-6 max-w-5xl">
                <a
                  href="#"
                  class="group rounded-2xl overflow-hidden ring-1 ring-white/20 bg-white/5 backdrop-blur hover:bg-white/10 transition"
                >
                  <div class="p-5">
                    <div class="inline-flex h-9 w-9 items-center justify-center rounded-full bg-white/10 border border-white/20">
                      <i data-lucide="home" class="w-4.5 h-4.5 text-white"></i>
                    </div>
                    <div class="mt-4">
                      <div class="text-lg font-semibold tracking-tight text-white">Home</div>
                      <p class="mt-1 text-sm text-white/70">Return to the homepage</p>
                    </div>
                  </div>
                </a>
                <a
                  href="#"
                  class="group rounded-2xl overflow-hidden ring-1 ring-white/20 bg-white/5 backdrop-blur hover:bg-white/10 transition"
                >
                  <div class="p-5">
                    <div class="inline-flex h-9 w-9 items-center justify-center rounded-full bg-white/10 border border-white/20">
                      <i data-lucide="buildings" class="w-4.5 h-4.5 text-white"></i>
                    </div>
                    <div class="mt-4">
                      <div class="text-lg font-semibold tracking-tight text-white">Projects</div>
                      <p class="mt-1 text-sm text-white/70">Explore our portfolio</p>
                    </div>
                  </div>
                </a>
                <a
                  href="#"
                  class="group rounded-2xl overflow-hidden ring-1 ring-white/20 bg-white/5 backdrop-blur hover:bg-white/10 transition"
                >
                  <div class="p-5">
                    <div class="inline-flex h-9 w-9 items-center justify-center rounded-full bg-white/10 border border-white/20">
                      <i data-lucide="users" class="w-4.5 h-4.5 text-white"></i>
                    </div>
                    <div class="mt-4">
                      <div class="text-lg font-semibold tracking-tight text-white">Studio</div>
                      <p class="mt-1 text-sm text-white/70">Meet the team and our approach</p>
                    </div>
                  </div>
                </a>
              </div>
            </div>
          </div>
        </div>
      </section>

      <!-- Suggestion strip -->
      <section class="relative">
        <div class="max-w-7xl mx-auto px-6 sm:px-8 py-12">
          <div class="rounded-2xl ring-1 ring-black/5 bg-white p-6 sm:p-7">
            <div class="flex flex-col sm:flex-row items-start sm:items-center justify-between gap-4">
              <div>
                <div class="text-sm text-neutral-600">Still lost?</div>
                <h2 class="mt-1 text-2xl sm:text-3xl font-semibold tracking-tight">
                  Tell us what you were trying to find—our team can help.
                </h2>
              </div>
              <div class="flex items-center gap-3">
                <a
                  href="#"
                  class="inline-flex items-center gap-2 h-11 px-5 rounded-full border border-neutral-300 bg-white text-sm hover:border-neutral-900 hover:shadow-sm transition"
                >
                  Email Support
                  <i data-lucide="mail" class="w-4 h-4"></i>
                </a>
                <a
                  href="#"
                  class="inline-flex items-center gap-2 h-11 px-5 rounded-full bg-neutral-900 text-white text-sm hover:bg-neutral-800 transition"
                >
                  Start a Project
                  <i data-lucide="arrow-up-right" class="w-4 h-4"></i>
                </a>
              </div>
            </div>
          </div>
        </div>
      </section>

</div>
{% endblock %}
